{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

		{% if title %}
			<p>{{title}}
				- is it works?</p>
		{% else %}
			<p>NO titlito seo
			</p>
		{% endif %}


		<h2>Movies</h2>

		<ul>
			{% for movie in movies %}
				<li>{{movie}}</li>
			{% endfor %}
		</ul>

		<h2>Global Variables</2>

		<p>{{_self}}</p>
		<p>{{_charset}}</p>
		<p>Custom defined global in twit.yml:
			{{author}}</p>

	</div>
{% endblock %}
