{% extends 'base.html.twig' %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello
			{{ controller_name }}! âœ…</h1>

		This friendly message is coming from:
		<ul>
			<li>Your controller at
				<code>
					<a href="{{ 'C:/xampp/symfony/my_project_directory/src/Controller/ViewTwigController.php'|file_link(0) }}">src/Controller/ViewTwigController.php</a>
				</code>
			</li>
			<li>Your template at
				<code>
					<a href="{{ 'C:/xampp/symfony/my_project_directory/templates/view_twig/index.html.twig'|file_link(0) }}">templates/view_twig/index.html.twig</a>
				</code>
			</li>
		</ul>

		{% if title %}
			<p>{{title}}
				- is it works?</p>
		{% else %}
			<p>NO titlito seo
			</p>
		{% endif %}


		<h2>Movies</h2>

		<ul>
			{% for movie in movies %}
				<li>{{movie}}</li>
			{% endfor %}
		</ul>

		<h2>Global Variables</2>

		<p>{{_self}}</p>
		<p>{{_charset}}</p>
		<p>Custom defined global in twit.yml:
			{{author}}</p>

	</div>
{% endblock %}
